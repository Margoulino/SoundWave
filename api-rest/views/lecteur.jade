doctype html
html(lang='fr')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        link(rel='stylesheet', media='screen and (min-width: 701px) ', href='/stylesheets/styleDesktop.css')
        link(rel='stylesheet', media='screen and (max-width: 700px) ', href='/stylesheets/styleMobile.css')
        title Player
    
    body
        .audioplayer
            .visuel
            .infos
                .artiste= data.nomAuteur
                .titre= data.titre
            .waveform
            .controls
                button.prev
                button.play-pause.play
                button.next
                button.volume(data-value='90')
            .temps
                .en-cours 0:00
                .total= data.duree
            .statistiques
                .nb-lectures= data.nbEcoute + " vues"
                .nb-commentaires= data.nbCommentaire + " commentaires"
            .social
                button.like= data.nbLike + " J'aime"
                button.share Partager
    
    //- obligation de d√©clarer les variables dans un script inline
    script.
        let Utility = function() {
            this.idPlage = !{JSON.stringify(data.idPlage)};
            this.duree = !{JSON.stringify(data.duree)};
            this.peaks = !{JSON.stringify(data.peaks)};
            this.cheminPochette = !{JSON.stringify(data.cheminPochette)};
            this.cheminMP3 = !{JSON.stringify(data.cheminMP3)};
            this.songId = "song";
        }
    
    script(type='text/javascript', src='/javascripts/soundmanager/scripts/soundmanager2-jsmin.js')
    script(type='text/javascript', src="/javascripts/utility.js")
    script(type='text/javascript', src="/javascripts/waveform/waveform.js")
    script(type='text/javascript', src="/javascripts/player.js")
    script(type='text/javascript', src='/javascripts/sound-manager.js')
    script(type='text/javascript', src='/javascripts/lecteur-script.js')

        
